---
import BaseHead from "../components/BaseHead.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";

export interface Props {
	title: string;
	description: string;
	pubDate?: string;
	updatedDate?: string;
	heroImage?: {
		url:string,
		width?: number;
		height?:number
	};
	tags?: string[]
}

const {
	title, description, pubDate, updatedDate, heroImage,tags
} = Astro.props;
---

<html>
	<head>
		<BaseHead 
			title={title} 
			description={description} 
			image={heroImage?.url??''} 
			imageWidth={heroImage?.width} 
			imageHeight={heroImage?.height}
			tags={tags}
		/>
		<style>
			.title {
				font-size: 2em;
				margin: 0.25em 0 0;
			}
			hr {
				border-top: 1px solid #DDD;
				margin: 1rem 0;
			}
			
		</style>
	</head>
	<body>
		<Header />
		<main>
			<article>
				{heroImage?.url && (
					<img
						width={heroImage?.width}
						height={heroImage?.height}
						src={heroImage?.url}
						alt=""
					/>
				)}
				<h1 class="title">{title}</h1>
				{pubDate && <time>{pubDate}</time>}
				{updatedDate && <div>Last updated on <time>{updatedDate}</time></div>}
				<hr/>
				<slot />
			</article>
		</main>
		<Footer />
	</body>
</html>
